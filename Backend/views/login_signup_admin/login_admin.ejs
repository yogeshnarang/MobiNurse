<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Login</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="css/style.css">
</head>
<body>

    <div class="main-login">

        <!-- Sing in  Form -->
        <section class="sign-in">
            <div class="container">
                <div class="signin-content">
                    <div class="signin-image">
                        <figure><img src="images/mobinurse.png" alt="sing up image"></figure>
                        <a href="signup_admin" class="signup-image-link">Register as Doctor</a>
                        <a href="login" class="signup-image-link">Login as Patient</a>
                    </div>

                    <div class="signin-form">
                        <h2 class="form-title">Doctor login</h2>
                        <form action="/login_admin" method = "POST" register-form id="login-form">
                            <div class="form-group">
                                <label for="username"><i class="zmdi zmdi-account material-icons-namecl"></i></label>
                                <input type="text" name="username" id="username" placeholder="Doctor ID" required/>
                            </div>
                            <div class="form-group">
                                <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" name="password" id="password" placeholder="Password" required/>
                            </div>
                            <p style="font-size: small; color: red;"><%= response %></p>
                            <div class="form-group form-button">
                                <button type="submit" id="signin" class="form-submit">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>

    </div>

    <!-- JS -->
    <script src="vendor/jquery/jquery.min.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>