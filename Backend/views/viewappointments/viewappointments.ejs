        for(var i = bookings.length-1; i >= 0; i--){
            html += '<tr>';
            html += '<th scope="row">' + (bookings.length - i) + '</th>';
            html += '<td>Dr. ' + bookings[i].doctorName + '</td>';
            html += '<td>' + bookings[i].Date + '</td>';
            html += '<td>' + bookings[i].Time + '</td>';
            html += '<td>' + bookings[i].subject + '</td>';
            html += '<td><a href = "' + bookings[i].meetLink + '" target = "_blank">Link</a></td>';
            html += '</tr>';
        }
        html += '</tbody>';
        html += '</table>';
        console.log(html);
        document.getElementById("main-container").innerHTML = html;
