    <script type='text/javascript'> 
        var bookings = <%-JSON.stringify(booking)%> ;
        console.log(bookings);
        var html = '<table class="table table-hover">';
        html += '<thead><tr><th scope="col">#</th><th scope="col">Doctor Name</th><th scope="col">Date</th><th scope="col">Time</th><th scope="col">Reason</th><th scope="col">Appointment Link</th></tr></thead>';
